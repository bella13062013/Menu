<Window x:Class="Demo_WPF2.Style_1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo_WPF2"
        mc:Ignorable="d"
        Title="Style_1" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <StackPanel.Resources>
                <Style TargetType="Button" x:Key="key1">
                <Setter Property="Width" Value="100"/>
                <Setter Property="Height" Value="30"/>
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="Background" Value="BlanchedAlmond"/>
                </Style>
            </StackPanel.Resources>
            <Button Content="Nut bam 1" Style="{StaticResource key1}"/>
            <Button Content="Nut bam 2"/>
            <Button Content="Nut bam 3"/>
        </StackPanel>
    </Grid>
</Window>
